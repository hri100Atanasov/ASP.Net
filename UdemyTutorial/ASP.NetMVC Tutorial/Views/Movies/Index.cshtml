@using ASP.NetMVC_Tutorial.Models
@model List<Movie>
@{
    ViewBag.Title = "Index";
}

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id=movie.Id}, null)</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </tbody>
</table>

