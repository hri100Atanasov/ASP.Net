@model ASP.NetMVC_Tutorial.Models.Customer
@using System.Globalization
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.BirthDate != null)
    {
        <li>Birthdate: @Model.BirthDate.Value.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</li>
    }
</ul>